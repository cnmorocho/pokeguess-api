// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model PokemonAtrapado {
  id Int @id @default(autoincrement())
  nombre String
  idPokedex Int
  tipos String
  categoria String
  descripcion String
  color String
  imagen String
  fecha DateTime @default(now())
}

model Juego {
  id Int @id @default(autoincrement())
  intento Int @default(0)
  pista Pista?
  termino Boolean @default(false)
  gano Boolean @default(false)
}

model Pista {
  id Int @id @default(autoincrement())
  juego Juego @relation(fields: [idJuego], references: [id])
  idJuego Int @unique
  tipo String
  categoria String?
  color String?
  descripcion String?
  sprite String?
}

